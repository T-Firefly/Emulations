<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_activity_background"
    android:minHeight="200dp"
    android:minWidth="500dp"
    android:orientation="vertical"
    android:paddingBottom="24dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            style="@style/SystemInfoDialogTextViewLabelStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/name" />

        <TextView
            android:id="@+id/name"
            style="@style/SystemInfoDialogTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            style="@style/SystemInfoDialogTextViewLabelStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/platform_name" />

        <TextView
            android:id="@+id/platform_name"
            style="@style/SystemInfoDialogTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            style="@style/SystemInfoDialogTextViewLabelStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/support_ext" />

        <TextView
            android:id="@+id/support_ext"
            style="@style/SystemInfoDialogTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/core_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            style="@style/SystemInfoDialogTextViewLabelStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/retroarch_core" />

        <TextView
            android:id="@+id/core"
            style="@style/SystemInfoDialogTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="auto" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            style="@style/SystemInfoDialogTextViewLabelStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/rom_path" />

        <TextView
            android:id="@+id/rom_path"
            style="@style/SystemInfoDialogTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="auto" />

    </LinearLayout>

    <TextView
        android:id="@+id/rom_path_tips"
        style="@style/SystemInfoDialogTextViewLabelStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rom_path_tips"
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>